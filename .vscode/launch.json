    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "dist/index.js",
            "outputCapture": "std",
            "env": {
                "DEBUG": "*,-express:*,-body-parser:*,-send",
                "DEBUG_COLORS": "1",
                "FORCE_COLOR": "3"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
